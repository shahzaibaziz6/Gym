<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_home_gym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/colorAccent"
        android:text="The Gym"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_home_new_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_home_gym"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="New Entry"
        android:background="@color/tvbackground"
        android:padding="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="34sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_home_search_entry"
        android:background="@color/tvbackground"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_home_new_entry"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Search Entry"
        android:padding="16dp"
        android:textSize="34sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/tv_home_delete_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_home_search_entry"
        android:layout_marginTop="40dp"
        android:background="@color/tvbackground"
        android:gravity="center"
        android:text="Delete Entry"
        android:padding="16dp"
        android:textSize="34sp"
        android:textStyle="bold"/>
</RelativeLayout>