<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/ll_list_item_parent"
    android:paddingBottom="4sp"
    >
    <TextView
        android:layout_weight="1"
        android:text="Name show here"
        android:background="@color/background"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/tv_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_weight="1"
        android:textSize="20sp"
        android:background="@color/tvbackground"
        android:gravity="center"
        android:text="Adrees show here"
        android:id="@+id/tv_list_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:textSize="20sp"
        android:background="#c3bbbb"
        android:gravity="center"
        android:text="Adrees show here"
        android:id="@+id/tv_list_item_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>